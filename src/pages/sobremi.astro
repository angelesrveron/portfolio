<style>

  .profile-art-grid {
    display: grid;
    grid-template-columns: 2fr 1fr; 
    grid-template-rows: repeat(2, minmax(100px, 1fr)); 
    gap: 15px; /
    max-width: 400px; 
}

.profile-photo-container {
    grid-row: 1 / span 2; 
    grid-column: 1 / 2;
    margin-bottom: 0; 
}

.profile-photo {
    width: 100%;
    height: 100%;
    max-width: none; 
    object-fit: cover;
    border-radius: 10px;
}

.art-thumbnail-container {
    width: 100%;
    height: 100%;
    overflow: hidden;
    border-radius: 10px;
}

.art-thumbnail {
    width: 100%;
    height: 100%;
    object-fit: cover;
}



  body {
     margin: 0;
    padding: 0;
    background-color: #f8f8f8; 
    font-family: 'Poppins', sans-serif;
   font-weight: 400;
    line-height: 1.6;
  }
  
  h2, h3, h4 {
        font-family: 'Poppins', sans-serif;

    color: #333;
    font-weight: 700;
  }
  h3 {
    font-size: 1.3em;
    color: #333;
    margin-top: 30px;
    margin-bottom: 10px;
    border-bottom: 2px solid #333; 
    padding-bottom: 5px;
  }
  
  .about-me-section {
    padding: 50px;
    margin: 90px auto; 
    max-width: 1000px;
    background-color: white;
    border-radius: 20px; 
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    display: grid;
    grid-template-columns: 1.5fr 1fr; 
    gap: 40px;
  }
  .contact-button-link {
      display: block; 
      margin-top: 20px;
      text-decoration: none;
  }
  .contact-button {
      background-color: hotpink; 
      color: white;
      border: none;
      padding: 12px 25px;
      border-radius: 8px;
      font-size: 1em;
      font-weight: 600;
      cursor: pointer;
      transition: background-color 0.3s ease, transform 0.1s ease;
      width: 100%; 
      max-width: 300px;
  }
  .contact-button:hover {
      background-color: rgb(202, 34, 118); 
      transform: translateY(-2px); 
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .profile-photo-container {
    margin-bottom: 30px;
  }
  .profile-photo {
    width: 100%;
    max-width: 250px; 
    height: auto;
    border-radius: 10px;
    object-fit: cover;
  }
  .section-title {
    font-size: 3em;
    overflow: hidden; 
    text-align: left; 
    margin-bottom: 20px;
  }
  .reveal-text {
    display: block;
    opacity: 0; /* Estado inicial para GSAP */
    transform: translateY(100%);
  }
  .intro-paragraph {
    opacity: 0;
  }
  .reveal-line {
    opacity: 0;
    transform: translateY(10px);
    transition: none !important; 
  }
  .education-section, .contact-info, .experience-section {
    margin-bottom: 15px;
  }
  .small-text {
    font-size: 0.9em;
    margin-top: -10px;
    display: block;
  }


  .skills-info-container {
    padding-top: 20px;
  }

  .icon-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr); 
    gap: 10px;
    margin-bottom: 30px;
  }
  .skill-icon-card {
    background: #e9ecef;
    padding: 15px; 
    height: 70px; 
    width: 70%;
    display: flex; 
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    cursor: default;
    
    opacity: 0; /* Estado inicial para GSAP */
    transform: scale(0.8);
  }
  .skill-logo {
      max-width: 100%;
      max-height: 100%;
      height: 40px; 
      width: auto;
      object-fit: contain;
  }
  
  .skills-container { padding: 0; margin: 0; }
  .skill-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.9em; 
    font-weight: 600;
  }
  .skill-item h4 { margin-bottom: 2px; }
  .skill-percentage {
    opacity: 0; /* Estado inicial para GSAP */
    font-weight: bold;
    color: hotpink; 
  }
  .skill-bar-track {
    background: #e9ecef;
    height: 6px;
    border-radius: 3px;
    margin-bottom: 15px;
    overflow: hidden;
  }
  .skill-bar {
    background:hotpink; /* Color de la barra */
    height: 100%;
    width: 0; /* Estado inicial para GSAP */
  }

  @media (max-width: 800px) {
    .about-me-section {
      grid-template-columns: 1fr;
      padding: 30px 20px;
      margin: 20px;
    }
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    
    const mainContainer = document.querySelector(".about-me-section");
    const photoGrid = document.querySelector(".profile-art-grid"); 
    const mainPhoto = document.getElementById('main-photo');
    const artThumb1 = document.getElementById('art-thumb-1');
    const artThumb2 = document.getElementById('art-thumb-2');
    const contactButton = document.querySelector(".contact-button");
    
    const textElements = gsap.utils.toArray(".reveal-line"); 
    
    
    if (photoGrid) {
        gsap.to(photoGrid, {
            opacity: 1,
            y: 0,
            duration: 1,
            ease: "power2.out",
            scrollTrigger: {
                trigger: photoGrid,
                start: "top 85%", 
                toggleActions: "play none none none",
            }
        });
    }


    // Hacemos que la foto principal y las miniaturas se muevan ligeramente al hacer scroll
    if (mainPhoto && artThumb1 && artThumb2) {
        gsap.to(mainPhoto, {
            y: -50, // Mueve la foto principal 50px hacia arriba
            ease: "none",
            scrollTrigger: {
                trigger: photoGrid,
                start: "top bottom", 
                end: "bottom top", // Cubre todo el viewport
                scrub: true, // Sincroniza con el scroll
            }
        });
        
        gsap.to(artThumb1, {
            y: 30, // Mueve el arte superior 30px hacia abajo (efecto contrario)
            ease: "none",
            scrollTrigger: {
                trigger: photoGrid,
                start: "top bottom", 
                end: "bottom top",
                scrub: true,
            }
        });

        gsap.to(artThumb2, {
            y: -20, // Mueve el arte inferior 20px hacia arriba 
            scrollTrigger: {
                trigger: photoGrid,
                start: "top bottom", 
                end: "bottom top",
                scrub: true,
            }
        });
    }

    if (contactButton) {
        gsap.to(contactButton, {
            scale: 1.05,
            duration: 0.5,
            repeat: -1, // Repite infinitamente
            yoyo: true, // Vuelve al estado original
            ease: "power1.inOut",
            delay: 3 // Espera 3 segundos después de que el texto termine de aparecer
        });
    }


    const textTimeline = gsap.timeline({
        scrollTrigger: {
            trigger: mainContainer,
            start: "top 80%", 
            toggleActions: "play none none none",
        }
    });

    textTimeline.to(".reveal-text", {
      y: 0,
      opacity: 1,
      duration: 0.8,
      ease: "power3.out",
    }, 0); 

    textTimeline.to(".intro-paragraph", {
      opacity: 1,
      duration: 0.6,
    }, 0.2); 

    textTimeline.to(textElements, {
        y: 0,
        opacity: 1,
        duration: 0.5,
        stagger: 0.1, 
    }, 0.5); 


    gsap.utils.toArray(".skill-item").forEach((skillItem) => {
      
      const itemElement = skillItem as Element; 
      
      const bar = itemElement.querySelector('.skill-bar') as HTMLElement; 
      const percentageText = itemElement.querySelector('.skill-percentage') as HTMLElement;
      
      if (!bar || !percentageText) return; 

      const level = bar.getAttribute('data-level')!; 

      const barTimeline = gsap.timeline({
        scrollTrigger: {
          trigger: itemElement, 
          start: "top 90%",
          toggleActions: "play none none none",
        }
      });
      
      barTimeline.to(bar, {
        width: level, 
        duration: 1.5,
        ease: "power2.out",
      }, 0); 
      
      barTimeline.to(percentageText, {
        opacity: 1, 
        duration: 0.5,
        ease: "power2.out",
      }, 0.5); 
    });


    gsap.to(".skill-icon-card", {
      opacity: 1,
      scale: 1,
      duration: 0.6,
      ease: "back.out(1.5)",
      stagger: 0.08, 
      
      scrollTrigger: {
        trigger: ".skills-icon-group",
        start: "top 75%",
        toggleActions: "play none none none",
      }
    });
  });
</script>