<nav
  class="flex justify-center items-center fixed top-0 left-0 w-full bg-white z-[1000]"
>
  <div>
    <a href="/" class="nav-link" id="link-serv">Inicio</a>
    <a href="/sobremi" class="nav-link" id="link-sobre">Sobre mí</a>
    <a href="/proyectos" class="nav-link" id="link-proy">Proyectos</a>
  </div>
</nav>
<style>
  nav {
    /* Reglas de layout migrados a Tailwind en la etiqueta <nav> */
  }
  nav div {
    padding: 1em;
  }
  a {
    cursor: pointer;
    text-decoration: none;
    color: #000;
    font-family: "Poppins", sans-serif;
    font-weight: 400;
    font-style: normal;
    font-size: 1.3em;
    text-transform: uppercase;
    display: inline-block; /* CRÍTICO para SplitText/GSAP */
  }
  a:hover {
    color: hotpink;
    font-weight: bold;
  }
  a:nth-child(2) {
    margin: 0 30px 0 30px;
  }
</style>
<script>
  import gsap from "gsap";
  import { SplitText } from "gsap/SplitText";
  gsap.registerPlugin(SplitText);
  const links = document.querySelectorAll(".nav-link");
  links.forEach((link) => {
    const split = new SplitText(link, { type: "chars" });
    link.addEventListener("mouseenter", () => {
      gsap.to(split.chars, {
        y: -8,
        duration: 0.2,
        stagger: 0.03,
        ease: "power1.out",
      });
    });
    link.addEventListener("mouseleave", () => {
      gsap.to(split.chars, {
        y: 0,
        duration: 0.5,
        stagger: 0.03,
        ease: "power2.out",
      });
    });
  });
</script>
