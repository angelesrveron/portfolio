</div>

<style>
  .imagen-con-pensamientos {
    width: 310px; /* Ancho fijo para desktop */
    height: auto;
  } /* Posicionamiento de los iconos */
  #ai {
    top: -20px;
    left: 160px;
  }
  #ps {
    top: 50px;
    left: 250px;
  }
  #ae {
    top: 80px;
    left: -10px;
  }
  #fig {
    top: 0px;
    left: 50px;
  } /* Marquee track */
  .marquee-track {
    display: flex;
    width: max-content;
  } /* Animaciones y Hover */
  .resaltar:hover {
    color: hotpink; /* Color de hover específico */
  }
  main h1,
  p {
    cursor: default; /* Mantenemos el cursor por defecto */
  }
</style>

<script>
  import gsap from "gsap";
  import { SplitText } from "gsap/SplitText";

  gsap.registerPlugin(SplitText);

  document.addEventListener("DOMContentLoaded", () => {
    const split = new SplitText(".miTexto", { type: "words, chars" });

    const tl = gsap.timeline();

    tl.from(split.words, {
      y: 50,
      opacity: 0,
      stagger: 0.05,
      duration: 0.5,
      ease: "power2.out",
    });

    tl.from(
      ["#linkedin", "#behance", "#instagram"],
      {
        y: 30,
        opacity: 0,
        duration: 0.6,
        stagger: 0.2,
        ease: "back.out(1.7)",
      },
      "-=0.3"
    );

    const appLogos = document.querySelectorAll(".app-logo");

    if (appLogos.length > 0) {
      appLogos.forEach((logo) => {
        logo.addEventListener("mouseenter", () => {
          gsap.to(logo, {
            x: gsap.utils.random(-8, 8),
            y: gsap.utils.random(-8, 8),
            rotation: gsap.utils.random(-5, 5),
            scale: 1.1,
            opacity: 1,
            duration: 0.3,
            ease: "power2.out",
          });
        });

        logo.addEventListener("mouseleave", () => {
          gsap.to(logo, {
            x: 0,
            y: 0,
            rotation: 0,
            scale: 1,
            opacity: 1,
            duration: 0.3,
            ease: "power2.out",
          });
        });
      });
    }
  });

  gsap.to(".marquee-track", {
    x: "-50%",
    duration: 15,
    ease: "linear",
    repeat: -1,
  });
</script>
