---
import yoImagen from "../assets/yo.png";
import ai from "../assets/ai.png";
import ps from "../assets/ps.png";
import ae from "../assets/ae.png";
import fig from "../assets/fig.png";
import behance from "../assets/behance.png";
import linkedin from "../assets/linkedin.png";
import instagram from "../assets/instagram.png";
---

<div id="container" class="pt-28  px-6 max-w-7xl mx-auto">
  <main>
    <div id="welcome" class="flex flex-col md:flex-row items-center justify-center gap-12 md:gap-4">
      
      <div class="texto-presentacion w-full md:w-[45%] font-sans text-center md:text-left order-2 md:order-1">
        
        <h1 class="miTexto text-5xl md:text-7xl font-bold leading-[0.9]">
          Hola, <br />
          <span
            class="resaltar transition-colors duration-300 hover:text-pink-500 text-[1.2em] font-extrabold"
            >soy Angie!</span
          >
        </h1>

        <p class="miTexto text-base md:text-lg w-full md:w-[90%] mt-6 mb-7 font-medium text-gray-700">
          Soy una creadora visual de Buenos Aires especializada en dar vida a ideas a través del diseño.
        </p>

       <div class="flex space-x-4 justify-center md:justify-start mb-10 md:mb-0">
          <a href="https://www.linkedin.com/in/ángeles-verón-553b78255" target="_blank">
            <img
              id="linkedin"
              src={linkedin.src}
              alt="Linked In"
              fetchpriority="high"
              width="35"
              class="hover:scale-110 transition-transform"
            />
          </a>
          <a href="https://www.behance.net/ngelesvern" target="_blank">
            <img
              id="behance"
              src={behance.src}
              alt="Behance"
              fetchpriority="high"
              width="35"
              class="hover:scale-110 transition-transform"
            />
          </a>
          <a href="https://www.instagram.com/" target="_blank">
            <img
              id="instagram"
              src={instagram.src}
              alt="Instagram"
              fetchpriority="high"
              width="35"
              class="hover:scale-110 transition-transform"
            />
          </a>
        </div>
      </div>

      <div class="imagen-con-pensamientos relative inline-block order-1 md:order-2 mt-8 md:mt-0">
        <img
          id="yoImagen"
          src={yoImagen.src}
          alt="Angie"
          fetchpriority="high"
          width="350"
          class="z-10 block w-[280px] md:w-[350px] h-auto relative"
        />

        <img class="app-logo absolute w-[50px] md:w-[60px] z-10" id="ai" src={ai.src} alt="Illustrator" />
        <img class="app-logo absolute w-[50px] md:w-[60px] z-10" id="ps" src={ps.src} alt="Photoshop" />
        <img class="app-logo absolute w-[50px] md:w-[60px] z-10" id="ae" src={ae.src} alt="After Effects" />
        <img class="app-logo absolute w-[50px] md:w-[60px] z-10" id="fig" src={fig.src} alt="Figma" />
      </div>

    </div>
  </main>
</div> <div class="marquee-container overflow-hidden w-full h-12 md:h-16 relative bg-pink-500 flex items-center  shadow-lg">
  <div class="marquee-track flex w-max">
    <span class="marquee-text whitespace-nowrap text-white font-semibold text-lg md:text-xl font-sans mr-8">
      Contactame &nbsp;•&nbsp; Contactame &nbsp;•&nbsp; Contactame &nbsp;•&nbsp; Contactame &nbsp;•&nbsp; Contactame &nbsp;•&nbsp;
    </span>
    <span class="marquee-text whitespace-nowrap text-white font-semibold text-lg md:text-xl font-sans mr-8">
      Contactame &nbsp;•&nbsp; Contactame &nbsp;•&nbsp; Contactame &nbsp;•&nbsp; Contactame &nbsp;•&nbsp; Contactame &nbsp;•&nbsp;
    </span>
     <span class="marquee-text whitespace-nowrap text-white font-semibold text-lg md:text-xl font-sans mr-8">
      Contactame &nbsp;•&nbsp; Contactame &nbsp;•&nbsp; Contactame &nbsp;•&nbsp; Contactame &nbsp;•&nbsp; Contactame &nbsp;•&nbsp;
    </span>
  </div>
</div>

<style>
  .imagen-con-pensamientos {
    width: max-content;
    height: auto;
  }

  #ai {
    top: -10px;
    right: 20px;
  }
  #ps {
    top: 60px;
    right: -20px;
  }
  #ae {
    top: 90px;
    left: -10px;
  }
  #fig {
    top: 10px;
    left: 20px;
  }

  .marquee-track {
    display: flex;
    width: max-content;
  }
  
  .resaltar:hover {
    color: hotpink;
  }
  
  main h1, p {
    cursor: default;
  }
</style>

<script>
  import gsap from "gsap";
  import { SplitText } from "gsap/SplitText";

  try {
    gsap.registerPlugin(SplitText);
  } catch (e) {
    console.warn("SplitText no disponible");
  }

  document.addEventListener("DOMContentLoaded", () => {
    
    // Animación de Texto
    const miTextoElement = document.querySelector(".miTexto");
    if(miTextoElement) {
        try {
            const split = new SplitText(".miTexto", { type: "words, chars" });
            const tl = gsap.timeline();
            
            tl.from(split.words, {
                y: 50,
                opacity: 0,
                stagger: 0.05,
                duration: 0.5,
                ease: "power2.out",
            });

            // Animación iconos sociales
            tl.from(
                ["#linkedin", "#behance", "#instagram"],
                {
                    y: 30,
                    opacity: 0,
                    duration: 0.6,
                    stagger: 0.2,
                    ease: "back.out(1.7)",
                },
                "-=0.3"
            );
        } catch (error) {
             gsap.from(".miTexto", { opacity: 0, y: 20, duration: 1 });
        }
    }

    // Animación Iconos Flotantes (Hover)
    const appLogos = document.querySelectorAll(".app-logo");
    if (appLogos.length > 0) {
      appLogos.forEach((logo) => {
        logo.addEventListener("mouseenter", () => {
          gsap.to(logo, {
            x: gsap.utils.random(-8, 8),
            y: gsap.utils.random(-8, 8),
            rotation: gsap.utils.random(-5, 5),
            scale: 1.1,
            opacity: 1,
            duration: 0.3,
            ease: "power2.out",
          });
        });

        logo.addEventListener("mouseleave", () => {
          gsap.to(logo, {
            x: 0,
            y: 0,
            rotation: 0,
            scale: 1,
            opacity: 1,
            duration: 0.3,
            ease: "power2.out",
          });
        });
      });
    }
  });

  // Animación Marquee Infinita
  gsap.to(".marquee-track", {
    x: "-33.33%",
    duration: 15,
    ease: "linear",
    repeat: -1,
  });
</script>