---
import yoImagen from "../assets/yo.png";
import ai from "../assets/ai.png";
import ps from "../assets/ps.png";
import ae from "../assets/ae.png";
import fig from "../assets/fig.png";
import behance from "../assets/behance.png";
import linkedin from "../assets/linkedin.png";
import instagram from "../assets/instagram.png";

// Se asume que el archivo welcome.css ya fue eliminado o que esta importación fue borrada.
---

<div id="container" class="pt-28">
  <main>
    <div id="welcome" class="flex justify-center flex-row">
      <div class="texto-presentacion w-[40%] font-sans">
        <h1 class="miTexto text-7xl font-bold leading-[0.8]">
          Hola, <br />
          <span
            class="resaltar transition-colors duration-300 hover:text-pink-500 text-[1.2em] font-extrabold"
            >soy Angie!</span
          >
        </h1>

        <p class="miTexto text-base w-[90%] mt-7 mb-7 font-medium">
          Soy Licenciada en Tecnología Multimedial y creadora visual de Buenos  
                  Aires especializada en dar vida a ideas a través del diseño.
        </p>

        <div class="flex space-x-4">
          <a





            href="https://www.linkedin.com/in/ángeles-verón-553b78255"




          >
            <img






              id="linkedin"






              src={linkedin.src}






              alt="Linked In"






              fetchpriority="high"






              width="35"





            /></a
          >
          <a href="https://www.behance.net/ngelesvern"
            ><img






              id="behance"






              src={behance.src}






              alt="Behance"






              fetchpriority="high"






              width="35"





            /></a
          >
          <a href="https://www.instagram.com/"
            ><img






              id="instagram"






              src={instagram.src}






              alt="Instagram"






              fetchpriority="high"






              width="35"





            /></a
          >
        </div>
      </div>

      <div class="imagen-con-pensamientos relative inline-block">
        <img





          id="yoImagen"





          src={yoImagen.src}





          alt="Angie"





          fetchpriority="high"





          width="350"





          class="z-10 mt-[50px] block w-full h-auto"




        />

        <img
          class="app-logo absolute w-[60px] z-10"
          id="ai"
          src={ai.src}
          alt="Adobe Illustrator"
        />
        <img
          class="app-logo absolute w-[60px] z-10"
          id="ps"
          src={ps.src}
          alt="Adobe Photoshop"
        />
        <img
          class="app-logo absolute w-[60px] z-10"
          id="ae"
          src={ae.src}
          alt="Adobe After Effects"
        />
        <img
          class="app-logo absolute w-[60px] z-10"
          id="fig"
          src={fig.src}
          alt="Figma"
        />
      </div>
    </div>
  </main>

  <div
    class="marquee-container overflow-hidden w-full h-16 relative bg-pink-500 rounded-md flex items-center "
  >
    <div class="marquee-track flex w-max">
      <span
        class="marquee-text whitespace-nowrap text-white font-semibold text-xl font-sans mr-8"
