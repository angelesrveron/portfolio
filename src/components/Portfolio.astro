---
import projects from "../data/projects.json";
---

<div class="portfolio">
  <h1>Algunos de mis trabajos</h1>
  <div class="stack">
    {
      projects.map((project, index) => {
        const sizeClass = `size${(index % 4) + 1}`; // Esto cicla size1, size2, size3, size4
        
        const projectId = String(project.id);

        return (
          <a
            
            href={`/${projectId}`} 
            class={`work ${sizeClass}`}
            data-title={project.title}
          >
            <img
              src={project.imageUrl}
              alt={`Imagen del proyecto ${project.title}`}
              class="work-image"
              loading="lazy"
            />

            <span class="work-title">{project.title}</span>
          </a>
        );
      })
    }

    <a href="/proyectos"> <button class="see-all">Ver todos</button></a>
  </div>
</div>

<style>
  .portfolio {
    padding: 10px 0;
    text-align: center;
  }
  .trabajemos {
  }

  .stack {
    position: relative;
    min-height: 100vh;
  }

  .work {
    position: absolute;
    top: -5%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: block; 
    overflow: hidden; 

    color: white;
    font-weight: bold;
    border-radius: 12px;
    box-shadow: 0 15px 25px rgba(0, 0, 0, 0.3);
    opacity: 0;
    cursor: pointer;
    font-size: 1.5rem;

    transition: transform 0.3s ease;
  }

  .work-image {
    width: 100%;
    height: 100%;
    object-fit: cover; 
    display: block;
    transition: transform 0.3s ease; 
  }

  .work-title {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 1rem;

    background: rgba(0, 0, 0, 0.7); 
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .work:hover .work-title {
    opacity: 1; 
  }

  .work:hover {
    transform: translate(-50%, -50%) scale(1.03); 
  }
  .work:hover .work-image {
    transform: scale(1.05); 
  }

  
  .size1 {
       font-family: "Poppins", sans-serif;
       font-size: 15px;
    width: 300px;
    height: 300px;
  }
  .size2 {
       font-family: "Poppins", sans-serif;
       font-size: 15px;

    width: 400px;
    height: 250px;
  }
  .size3 {
       font-family: "Poppins", sans-serif;
       font-size: 15px;
    
    width: 320px;
    height: 380px;
  }
  

  .see-all {
    opacity: 0;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translateX(-50%);
    padding: 15px 30px;
    font-size: 1.2rem;
    border-radius: 8px;
    border: none;
    background: hotpink;
    color: white;
    cursor: pointer;
  }
  h1 {
    font-family: "Poppins", sans-serif;
    font-weight: 700;
    font-style: normal;
    font-size: 4em;
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    const works = gsap.utils.toArray(".work");

    const tl = gsap.timeline({
      scrollTrigger: {
        trigger: ".stack",
        start: "top 60%",
        end: "+=" + works.length * 400,
        scrub: true,
        pin: true,
        anticipatePin: 1,
      },
    });

    works.forEach((work) => {
      tl.to(work as HTMLElement, {
        opacity: 1,
        x: gsap.utils.random(-80, 80),
        y: gsap.utils.random(-80, 80),
        rotation: gsap.utils.random(-15, 15),
        duration: 1,
      });
    });

    tl.to(".see-all", {
      opacity: 1,
      y: -30,
      duration: 1,
    });
  });
</script>
