---
import behance from "../assets/behance.png";
import linkedin from "../assets/linkedin.png";
import instagram from "../assets/instagram.png";
---

<div class="py-8 md:py-10 bg-pink-500 text-white font-sans mt-auto">
    <footer class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <div class="flex justify-center gap-6 mb-6">
            <a 
                href="https://www.linkedin.com/in/ángeles-verón-553b78255" 
                target="_blank"
                rel="noopener noreferrer"
                class="transition hover:opacity-75 hover:scale-110 duration-200"
            >
                <img
                    id="linkedin"
                    src={linkedin.src}
                    alt="LinkedIn"
                    class="w-8 h-8 md:w-9 md:h-9 object-contain"
                />
            </a>
            <a 
                href="https://www.behance.net/ngelesvern"
                target="_blank"
                rel="noopener noreferrer"
                class="transition hover:opacity-75 hover:scale-110 duration-200"
            >
                <img
                    id="behance"
                    src={behance.src}
                    alt="Behance"
                    class="w-8 h-8 md:w-9 md:h-9 object-contain"
                />
            </a>
            <a 
                href="https://www.instagram.com/"
                target="_blank"
                rel="noopener noreferrer"
                class="transition hover:opacity-75 hover:scale-110 duration-200"
            >
                <img
                    id="instagram"
                    src={instagram.src}
                    alt="Instagram"
                    class="w-8 h-8 md:w-9 md:h-9 object-contain"
                />
            </a>
        </div>
        
        <ul class="flex flex-wrap justify-center gap-x-6 gap-y-2 mb-4 text-sm md:text-base font-medium">
            <li>
                <a 
                    href="/" 
                    class="text-white hover:text-pink-100 hover:underline transition duration-200"
                >
                    Inicio
                </a>
            </li>
            <li>
                <a 
                    href="/sobremi" 
                    class="text-white hover:text-pink-100 hover:underline transition duration-200"
                >
                    Sobre mí
                </a>
            </li>
              <li>
                <a 
                    href="/proyectos" 
                    class="text-white hover:text-pink-100 hover:underline transition duration-200"
                >
                    Proyectos
                </a>
            </li>
        </ul>
        
        <p class="mt-4 text-center text-xs text-pink-200/80">
            Ángeles Verón © 2025
        </p>
    </footer>
</div>